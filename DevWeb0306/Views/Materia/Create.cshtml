@model DevWeb0306.Models.Materia
@{
    ViewData["Title"] = "Nova Matéria";
}
<div class="page-header">
    <h1>Nova Matéria</h1>
    <p class="page-subtitle">Cadastro de matéria no sistema</p>
</div>
<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CursoId" class="form-label"></label>
                    <select asp-for="CursoId" class="form-select form-control" asp-items="ViewBag.CursoId">
                        <option value="">-- Selecione um Curso --</option>
                    </select>
                    <span asp-validation-for="CursoId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ProfessorId" class="form-label"></label>
                    <select asp-for="ProfessorId" class="form-select form-control" asp-items="ViewBag.ProfessorId">
                        <option value="">-- Selecione um Professor --</option>
                    </select>
                    <span asp-validation-for="ProfessorId" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model DevWeb0306.Models.Materia
@{
    ViewData["Title"] = "Excluir Matéria";
}
<div class="page-header">
    <h1>Excluir Matéria</h1>
    <p class="page-subtitle">Tem certeza que deseja excluir esta matéria?</p>
</div>
<div class="card">
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Esta ação não poderá ser desfeita.
        </div>
        <div class="materia-info mb-4">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Curso)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Curso.Nome)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Professor)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Professor.Nome)
                </dd>
            </dl>
        </div>
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Exclusão
                </button>
            </div>
        </form>
    </div>
</div>
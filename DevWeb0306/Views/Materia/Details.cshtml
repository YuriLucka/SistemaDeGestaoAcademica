@model DevWeb0306.Models.Materia
@{
    ViewData["Title"] = "Detalhes da Matéria";
}
<div class="page-header">
    <h1>Detalhes da Matéria</h1>
    <p class="page-subtitle">Informações completas da matéria</p>
</div>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Curso)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Curso.Nome)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Professor)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Professor.Nome)
            </dd>
        </dl>
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>
@model DevWeb0306.Models.Curso
@{
    ViewData["Title"] = "Editar Curso";
}
<div class="page-header">
    <h1>Editar Curso</h1>
    <p class="page-subtitle">Altere as informações do curso</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="EixoId" class="form-label"></label>
                    <select asp-for="EixoId" class="form-select form-control" asp-items="ViewBag.EixoId">
                        <option value="">-- Selecione um Eixo --</option>
                    </select>
                    <span asp-validation-for="EixoId" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Salvar Alterações
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}